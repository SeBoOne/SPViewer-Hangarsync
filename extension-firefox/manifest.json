{
  "manifest_version": 2,
  "name": "SPViewer HangarSync",
  "version": "1.0.0",
  "description": "Sichern und synchronisieren Sie Ihre SPViewer Fahrzeug-Loadouts. Einfacher Export und Import aller Schiffsausr√ºstungen.",
  "author": "SeBoOne",
  "homepage_url": "https://github.com/SeBoOne/spviewer-hangarsync",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.spviewer.eu/*", "https://spviewer.eu/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "hangarsync@seboone.com",
      "strict_min_version": "57.0"
    }
  }
}
