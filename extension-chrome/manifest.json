{
  "manifest_version": 3,
  "name": "SPViewer HangarSync",
  "version": "1.0.0",
  "description": "Sichern und synchronisieren Sie Ihre SPViewer Fahrzeug-Loadouts. Einfacher Export und Import aller Schiffsausr√ºstungen.",
  "author": "SeBoOne",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "activeTab"
  ],

  "host_permissions": [
    "https://www.spviewer.eu/*",
    "https://spviewer.eu/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.spviewer.eu/*", "https://spviewer.eu/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
